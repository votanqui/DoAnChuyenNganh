@model DoAnChuyenNganh.Models.ContactInfo

@{
    ViewData["Title"] = "Quản lý thông tin liên hệ";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml"; // Set the layout as in your product edit form
}

<div class="container">
    <form method="post">
        <div class="row">
            <!-- Left column with form fields -->
            <div class="col-md-6">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title">CẬP NHẬT THÔNG TIN LIÊN HỆ</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Hidden field for Id -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Contact info fields -->
                        <div class="form-group row mb-3">
                            <label for="Name" class="col-sm-3 col-form-label">Tên</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label for="Address" class="col-sm-3 col-form-label">Địa chỉ</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required />
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label for="PhoneNumber" class="col-sm-3 col-form-label">Số điện thoại</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required />
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label for="Email" class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label for="WorkingHours" class="col-sm-3 col-form-label">Giờ làm việc</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="WorkingHours" name="WorkingHours" value="@Model.WorkingHours" required />
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            <label for="MapUrl" class="col-sm-3 col-form-label">URL bản đồ</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" id="MapUrl" name="MapUrl" rows="3" required>@Model.MapUrl</textarea>
                            </div>
                        </div>

                        <div class="form-group text-center mb-3">
                            <button type="submit" class="btn btn-primary btn-block">Lưu thay đổi</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right column with current info display -->
            <div class="col-md-6">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin hiện tại</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Tên:</strong> @Model.Name</p>
                        <p><strong>Địa chỉ:</strong> @Model.Address</p>
                        <p><strong>Số điện thoại:</strong> @Model.PhoneNumber</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Giờ làm việc:</strong> @Model.WorkingHours</p>
                        <p><strong>Bản đồ:</strong> <a href="@Model.MapUrl" target="_blank">Xem bản đồ</a></p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
