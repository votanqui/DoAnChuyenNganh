@model DoAnChuyenNganh.Models.ContactInfo

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liên Hệ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-4">
        <!-- Bản đồ Google -->
        <div class="row">
            <div class="col-12">
                <iframe src="@Model.MapUrl"
                        width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>

        <!-- Thông tin liên hệ và form -->
        <div class="row mt-4">
            <!-- Thông tin liên hệ -->
            <div class="col-md-4">
                <h5 class="fw-bold">@Model.Name</h5>
                <p>@Model.Address</p>
                <p><i class="bi bi-telephone"></i> @Model.PhoneNumber</p>
                <p>Thời Gian Làm Việc: @Model.WorkingHours</p>
                <p><i class="bi bi-envelope"></i> @Model.Email</p>
                <p>Phản hồi trong vòng 24h</p>
            </div>

            <!-- Form gửi tin nhắn -->
            <div class="col-md-8">
                <form method="post" action="/contact/send-message">
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Nhập tên" required>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="Nhập email" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">GỬI TIN NHẮN</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS và các thư viện liên quan -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
