<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

</head>

<body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Nhom09 Team</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href=""><i class="fa-solid fa-house"></i> Trang Chủ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 bg-dark text-white p-3" style="  min-height: 100vh; overflow-y: auto;">
                <h4 class="text-center">Admin Panel</h4>
                <hr>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a href="" class="nav-link text-white">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="" class="nav-link text-white">
                            <i class="fas fa-history"></i> Tài Khoản Đã Bán
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link text-white">
                            <i class="fas fa-money-bill-wave"></i> Biến Động Số Dư
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="" class="nav-link text-white">
                            <i class="fas fa-users"></i> Quản Lý Thành Viên
                        </a>
                    </li>
                 
                
                    <li class="nav-item">
                        <a href="" class="nav-link text-white">
                            <i class="fa-regular fa-credit-card"></i> Thẻ Cào
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link text-white">
                            <i class="fa-solid fa-gear"></i> Cấu Hình Website
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link text-white">
                            <i class="fas fa-sign-out-alt"></i> Đăng Xuất
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
