@model DoAnChuyenNganh.Models.ResetPasswordModel

@{
    ViewBag.Title = "Đặt lại mật khẩu";
}
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Reset Password Image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <div class="border rounded p-4">
                        <h2 class="text-center mb-4">Đặt lại mật khẩu</h2>

                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.Token)

                            <div class="form-outline mb-4">
                                @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới", new { @class = "form-label" })
                                @Html.PasswordFor(m => m.NewPassword, new { @id = "NewPassword", @class = "form-control form-control-lg", required = "required" })
                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-outline mb-4">
                                @Html.LabelFor(m => m.ConfirmPassword, "Xác nhận mật khẩu", new { @class = "form-label" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "ConfirmPassword", @class = "form-control form-control-lg", required = "required" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg btn-block w-100">Đặt lại mật khẩu</button>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary()
                                </div>
                            }
                        }
                        <div class="text-center mt-4">
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                <a href="/Account/Login" class="link-danger">Trở lại trang đăng nhập</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
